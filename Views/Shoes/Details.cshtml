							</dd>
						</div>
						<div>
							<dt class="col-sm-2 col-lg-2">
								@Html.DisplayNameFor(model => model.Style)
							</dt>
							<dd class="col-sm-10 col-lg-10">
								@Html.DisplayFor(model => model.Style)
							</dd>
						</div>
						<div>
							<dt class="col-sm-2 col-lg-2">
								@Html.DisplayNameFor(model => model.Model)
							</dt>
							<dd class="col-sm-10 col-lg-10">
								@Html.DisplayFor(model => model.Model)
							</dd>
						</div>

						<div>
							<dt class="col-sm-2 col-lg-2">
								@Html.DisplayNameFor(model => model.Colour1)
							</dt>
							<dd class="col-sm-10 col-lg-10">
								@Html.DisplayFor(model => model.Colour1)
							</dd>
						</div>

						<div>
							<dt class="col-sm-2 col-lg-2">
								@Html.DisplayNameFor(model => model.Colour2)
							</dt>
							<dd class="col-sm-10 col-lg-10">
								@Html.DisplayFor(model => model.Colour2)
							</dd>
						</div>

						<div>
							<dt class="col-sm-2 col-lg-2">
								@Html.DisplayNameFor(model => model.Sole)
							</dt>
							<dd class="col-sm-10 col-lg-10">
								@Html.DisplayFor(model => model.Sole)
							</dd>
						</div>

						<div>
