						</div>
						@*  <dt class="col-sm-2 col-lg-2">
								@Html.DisplayNameFor(model => model.Img_Lk)
							</dt>
							<dd class="col-sm-10 col-lg-10">
								@Html.DisplayFor(model => model.Img_Lk)
