						<div>
							<dt class="col-sm-2 col-lg-2">
								@Html.DisplayNameFor(model => model.Price)
							</dt>
							<dd class="col-sm-10 col-lg-10">
								@Html.DisplayFor(model => model.Price)
							</dd>
						</div>

						<div>
							<dt class="col-sm-2 col-lg-2">
								@Html.DisplayNameFor(model => model.Model_Type)
							</dt>
							<dd class="col-sm-10 col-lg-10">
								@Html.DisplayFor(model => model.Model_Type)
							</dd>
							<br />
						</div>

					</dl>

				</section>
				<div>
					<label>	Enter Quntity </label>
