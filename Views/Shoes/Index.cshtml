@model IEnumerable<TapShoesCanada.Models.Shoe>

@{
	ViewData["Title"] = "Index";
}

<style>
	table {
		border-collapse: collapse;
		width: 100%;
	}

	th, td {
		text-align: left;
		padding: 8px;
	}

	tr:nth-child(even) {
		background-color: #f2f2f2
	}

	th {
		background-color: #04AA6D;
		color: white;
	}
</style>

<form>
    <h1>Index</h1>
    <div>
        <label>
            Shoe Size:
            @Html.TextBox("shoesizes", "", new { @class = "form-control" })
        </label>

        <button class="btn btn-outline-primary" type="submit" formmethod="post" formaction="@Url.Action("Filter","Shoes")">Filter</button>
    </div>
    <p>

    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Size)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Style)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Img_Lk)
                </th>
                @*

                *@
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>


                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Style)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @*	@Html.DisplayFor(model => item.Img_Lk)*@
                        <img src="@item.Img_Lk" height="70" width="70">
                    </td>
                    @*

                    *@
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>

                    <td>
                        @*  <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        *@               <a asp-action="Details" asp-route-id="@item.Id">Details </a>
                        @* <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>